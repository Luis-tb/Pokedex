<!-- item_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo con borde redondeado -->
    <corners android:radius="8dp" />

    <!-- Color de fondo -->
    <solid android:color="#C94F4F" />

    <!-- Borde -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Margen interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
