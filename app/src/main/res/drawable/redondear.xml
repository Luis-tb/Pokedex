<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#90FFFFFF" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#CDD2D7" />
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#E0E0E0"
                android:startColor="#90FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
        </shape>
    </item>
</layer-list>
